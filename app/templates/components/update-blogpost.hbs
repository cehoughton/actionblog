{{#if updateBlogPostForm}}
  <h4>Update {{blogpost.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">author</label>
          {{input value=author id="author" placeholder=blogpost.author}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=blogpost.title}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=blogpost.content}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image" placeholder=blogpost.image}}
        </div>

        <button {{action 'update' blogpost}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateBlogPostForm'}}>Update</button>
{{/if}}
