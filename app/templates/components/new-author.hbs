{{#if addNewAuthor}}
  <h1>New Author</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="fighting">Fighting style</label>
          {{input value=fighting id="fighting"}}
        </div>

        <div class="form-group">
          <label for="biography">Bio</label>
          {{input value=biography id="biography"}}
        </div>
          <button {{action 'saveAuthor1'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'authorFormShow'}}>New Author</button>
  {{/if}}
