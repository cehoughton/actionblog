{{#if updateAuthorForm}}
  <h4>Update {{author.name}}'s info</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=author.name}}
        </div>

        <div class="form-group">
          <label for="fighting">Fighting Style</label>
          {{input value=fighting id="fighting" placeholder=author.fighting}}
        </div>

        <div class="form-group">
          <label for="biography">Bio</label>
          {{input value=biography id="biography" placeholder=author.biography}}
        </div>

        <button {{action 'update' author}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateAuthorForm'}}>Update</button>
{{/if}}
