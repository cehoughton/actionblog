{{#if addNewBlogPost}}
  <h1>New Blog Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'blogFormShow'}}>New Blog</button>
{{/if}}
